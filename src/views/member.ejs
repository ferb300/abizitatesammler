<%- include('header'); -%>
<% if (error) { %>
    <div class="ui negative message">
        <i class="close icon"></i>
        <div class="header">
            Fehler aufgetreten
        </div>
        <p>
            Aufgrund eines Fehlers konnten die Ã„nderungen nicht gesichert werden
        </p>
    </div>
<% } %>

<div class="ui segment">
    <h1 class="ui header">
        <%= member.name %>
    </h1>
    <p>
        Handynummer: <%= member.telNumber %>
    </p>
    <h2>
        Teilbarer Link
    </h2>
    <div class="ui action input clipboard-container">
        <input type="text" id="shareLink" value="<%= BASE_URL %>/members/<%= member.uniqueId %>">
        <button class="ui icon button clipboard-link" data-clipboard-target="#shareLink">
            <i class="copy icon"></i>
        </button>
    </div>
</div>

<form action="/db/members/payload" method="post" class="ui large form">
    <div class="ui stacked segment">
        <div class="field">
            <label>Link zur Charakteristik</label>
            <input type="text" name="link" placeholder="https://www.example.com" value="<%= member.payload %>">
        </div>
        <button type="submit" class="ui fluid large teal submit button">Sichern</button>
    </div>
</form>
<%- include('footer'); -%>